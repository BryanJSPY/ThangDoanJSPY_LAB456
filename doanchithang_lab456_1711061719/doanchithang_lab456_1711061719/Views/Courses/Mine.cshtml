@model IEnumerable<doanchithang_lab456_1711061719.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <span class="month">
                    @course.DateTime.ToString("MM")
                </span>
                <span class="day">
                    @course.DateTime.ToString("dd")
                </span>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit","Courses", new { id = course.Id })">Edit</a>
                <a href="#">Delete</a>
            </div>
        </li>
    }
</ul>

